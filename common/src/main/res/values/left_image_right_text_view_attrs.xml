<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LeftImgAndRightTextView">
        <!-- 是否被选中,默认false -->
        <attr name="lirt_checked" format="boolean" />
        <!-- 控件默认背景色,不设置则没有 -->
        <attr name="lirt_back_color" format="color" />
        <!-- 控件选中后背景色,不设置则没有 -->
        <attr name="lirt_back_color_checked" format="color" />
        <!-- 默认图标 -->
        <attr name="lirt_icon_drawable" format="reference" />
        <!-- 选中后图片 -->
        <attr name="lirt_icon_drawable_checked" format="reference" />
        <!-- 图片宽度,默认30dp -->
        <attr name="lirt_icon_width" format="integer|dimension" />
        <!-- 图片高度,默认30dp -->
        <attr name="lirt_icon_height" format="integer|dimension" />
        <!-- 文本默认颜色 -->
        <attr name="lirt_text_color" format="color" />
        <!-- 文本选中后颜色 -->
        <attr name="lirt_text_color_checked" format="color" />
        <!-- 文本内容 -->
        <attr name="lirt_text_info" format="string" />
        <!-- 选中后文本内容 -->
        <attr name="lirt_text_info_checked" format="string" />
        <!-- 文本大小 -->
        <attr name="lirt_text_size" format="float|dimension" />
        <!-- 文本和图片的间隔,默认8dp -->
        <attr name="lirt_spacing" format="dimension|integer" />

        <!-- 设置图片所在方向 -->
        <attr name="lirt_icon_location" format="enum">
            <enum name="iconLeft" value="0" />
            <enum name="iconRight" value="1" />
            <enum name="iconUp" value="2" />
            <enum name="iconBottom" value="3" />
        </attr>
    </declare-styleable>


</resources>