<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StarsView">
        <!-- 星星的默认颜色,默认Color.GREEN -->
        <attr name="stv_default_color" format="color" />
        <!-- 星星的选中颜色,Color.RED -->
        <attr name="stv_checked_color" format="color" />
        <!-- 星星的角个数,默认5个 -->
        <attr name="stv_num" format="integer" />
        <!-- 边的线宽,默认1dp -->
        <attr name="stv_edge_line_width" format="float|dimension" />
        <!-- 填充风格,fill(填满),stroke(描边),默认描边 -->
        <attr name="stv_style" format="enum">
            <!-- 填满 -->
            <enum name="fill" value="1" />
            <!-- 描边 -->
            <enum name="stroke" value="2" />
        </attr>
    </declare-styleable>
</resources>