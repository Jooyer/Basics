<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomMenu">
        <!-- 总高 -->

        <!-- 最左侧图标是否可见 -->
        <attr name="cm_left_image_visible" format="boolean"/>
        <!-- 最左侧图标的 drawable -->
        <attr name="cm_left_image_drawable" format="reference"/>
        <!-- 最左侧图标宽度 -->
        <attr name="cm_left_image_width" format="dimension|integer"/>
        <!-- 最左侧图标高度 -->
        <attr name="cm_left_image_height" format="dimension|integer"/>
        <!-- 最左侧图标左侧Margin -->
        <attr name="cm_left_image_margin" format="dimension|integer"/>

        <!-- 紧靠左侧的文本 -->
        <attr name="cm_left_text_info" format="reference|string"/>
        <!-- 紧靠左侧的文本大小 -->
        <attr name="cm_left_text_size" format="dimension|integer"/>
        <!-- 紧靠左侧的文本颜色 -->
        <attr name="cm_left_text_color" format="color|reference"/>
        <!-- 紧靠左侧的文本左侧Margin -->
        <attr name="cm_left_text_left_margin" format="dimension|integer"/>

        <!-- 紧靠右侧的文本 -->
        <attr name="cm_right_text_info" format="reference|string"/>
        <!-- 紧靠右侧的提示文本 -->
        <attr name="cm_right_hint_text_info" format="reference|string"/>
        <!-- 紧靠右侧的文本是否可见 -->
        <attr name="cm_right_text_visible" format="boolean"/>
        <!-- 紧靠右侧的文本大小 -->
        <attr name="cm_right_text_size" format="dimension|integer"/>
        <!-- 紧靠右侧的文本颜色 -->
        <attr name="cm_right_text_color" format="color|reference"/>
        <!-- 紧靠右侧的提示文本颜色 -->
        <attr name="cm_right_text_hint_color" format="color|reference"/>
        <!-- 紧靠右侧的文本右侧Margin -->
        <attr name="cm_right_text_right_margin" format="dimension|integer"/>
        <!-- 输入的类型 -->
        <attr name="cm_right_text_input_type">
            <enum name="number" value="1"/>
        </attr>

        <!-- 紧靠右侧图标是否可见 -->
        <attr name="cm_right_near_image_visible" format="boolean"/>
        <!-- 紧靠右侧图标的 drawable -->
        <attr name="cm_right_near_image_drawable" format="reference"/>
        <!-- 紧靠右侧图标宽度 -->
        <attr name="cm_right_near_image_width" format="dimension|integer"/>
        <!-- 紧靠右侧图标高度 -->
        <attr name="cm_right_near_image_height" format="dimension|integer"/>
        <!-- 紧靠右侧图标右侧Margin,距离最右侧 -->
        <attr name="cm_right_near_image_right_margin" format="dimension|integer"/>
        <!-- 紧靠右侧图标顶部Margin,距离最上面,默认0dp -->
        <attr name="cm_right_near_image_top_margin" format="dimension|integer"/>
        <!-- 紧靠右侧是否垂直居中,模式是的 -->
        <attr name="cm_right_near_image_center_vertical" format="boolean"/>
        <!-- 最右侧箭头的是否可见 -->
        <attr name="cm_right_arrow_visible" format="boolean"/>
        <!-- 最右侧箭头的 颜色 -->
        <attr name="cm_right_arrow_color" format="color|reference"/>
        <!-- 左侧图片 Padding(上下左右) -->
        <attr name="cm_right_arrow_padding" format="dimension|integer"/>
        <!-- 最右侧箭头方向, 向左或向右 -->
        <attr name="cm_right_arrow_orientation" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!-- 最右侧箭头模式 -->
        <attr name="cm_right_arrow_style" format="enum">
            <!-- Google Material Design -->
            <enum name="material_design" value="1" />
            <!-- 微信风格 -->
            <enum name="wechat_design" value="2" />
        </attr>
        <!-- 最右侧箭头宽度 -->
        <attr name="cm_right_arrow_width" format="dimension|integer"/>
        <!-- 最右侧箭头高度 -->
        <attr name="cm_right_arrow_height" format="dimension|integer"/>
        <!-- 最右侧箭头右侧Margin -->
        <attr name="cm_right_arrow_right_margin" format="dimension|integer"/>

        <!-- 底部分割线是否可见 -->
        <attr name="cm_bottom_divider_visible" format="boolean"/>
        <!-- 底部分割线颜色 -->
        <attr name="cm_bottom_divider_color" format="color|reference"/>
        <!-- 底部分割线左侧Margin -->
        <attr name="cm_bottom_divider_left_margin" format="dimension|integer"/>
        <!-- 底部分割线右侧Margin -->
        <attr name="cm_bottom_divider_right_margin" format="dimension|integer"/>


    </declare-styleable>


    <declare-styleable name="CustomEditMenu">

        <!-- 最左侧图标是否可见 -->
        <attr name="cem_left_image_visible" format="boolean"/>
        <!-- 最左侧图标的 drawable -->
        <attr name="cem_left_image_drawable" format="reference"/>
        <!-- 最左侧图标宽度 -->
        <attr name="cem_left_image_width" format="dimension|integer"/>
        <!-- 最左侧图标高度 -->
        <attr name="cem_left_image_height" format="dimension|integer"/>
        <!-- 最左侧图标左侧Margin -->
        <attr name="cem_left_image_margin" format="dimension|integer"/>

        <!-- 紧靠左侧的文本 -->
        <attr name="cem_left_text_info" format="reference|string"/>
        <!-- 紧靠左侧的文本大小 -->
        <attr name="cem_left_text_size" format="dimension|integer"/>
        <!-- 紧靠左侧的文本颜色 -->
        <attr name="cem_left_text_color" format="color|reference"/>
        <!-- 紧靠左侧的文本左侧Margin -->
        <attr name="cem_left_text_left_margin" format="dimension|integer"/>

        <!-- 右侧输入框的文本是否可见 -->
        <attr name="cem_right_input_visible" format="boolean"/>
        <!-- 右侧输入框宽度 -->
        <attr name="cem_right_input_left_padding" format="dimension|integer"/>
        <!-- 右侧输入框宽度 -->
        <attr name="cem_right_input_right_padding" format="dimension|integer"/>
        <!-- 右侧输入框宽度 -->
        <attr name="cem_right_input_width" format="dimension|integer"/>
        <!-- 右侧输入框的文本 -->
        <attr name="cem_right_input_text" format="reference|string"/>
        <!-- 右侧输入框的提示文本 -->
        <attr name="cem_right_input_hint_text" format="reference|string"/>
        <!-- 右侧输入框的文本大小 -->
        <attr name="cem_right_input_text_size" format="dimension|integer"/>
        <!-- 右侧输入框的文本长度 -->
        <attr name="cem_right_input_text_length" format="integer"/>
        <!-- 右侧输入框的文本颜色 -->
        <attr name="cem_right_input_text_color" format="color|reference"/>
        <!-- 右侧输入框的提示文本颜色 -->
        <attr name="cem_right_input_hint_color" format="color|reference"/>
        <!-- 右侧输入框的文本右侧Margin -->
        <attr name="cem_right_input_right_margin" format="dimension|integer"/>
        <!-- 右侧输入框输入的类型,默认是文本, 如果输入1则表示数字 -->
        <attr name="cem_right_input_type">
            <enum name="number" value="1"/>
        </attr>


        <!-- 最右侧图标的是否可见 -->
        <attr name="cem_right_image_visible" format="boolean"/>
        <!-- 最右侧图标的 drawable -->
        <attr name="cem_right_image_drawable" format="reference"/>
        <!-- 最右侧图标宽度 -->
        <attr name="cem_right_image_width" format="dimension|integer"/>
        <!-- 最右侧图标高度 -->
        <attr name="cem_right_image_height" format="dimension|integer"/>
        <!-- 最右侧图标高度右侧Margin -->
        <attr name="cem_right_image_right_margin" format="dimension|integer"/>


        <!-- 底部分割线是否可见 -->
        <attr name="cem_bottom_divider_visible" format="boolean"/>
        <!-- 底部分割线颜色 -->
        <attr name="cem_bottom_divider_color" format="color|reference"/>
        <!-- 底部分割线左侧Margin -->
        <attr name="cem_bottom_divider_left_margin" format="dimension|integer"/>
        <!-- 底部分割线右侧Margin -->
        <attr name="cem_bottom_divider_right_margin" format="dimension|integer"/>


    </declare-styleable>


</resources>