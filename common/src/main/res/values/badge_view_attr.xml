<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BadgeView">
        <!-- 上下间隔 -->
        <attr name="bv_tb_padding" format="dimension|integer" />
        <!-- 左右间隔 -->
        <attr name="bv_lr_padding" format="dimension|integer" />
        <!-- 轮廓宽度 -->
        <attr name="bv_stoke_width" format="dimension|float" />
        <!-- 轮廓颜色 -->
        <attr name="bv_stoke_color" format="color" />
        <!-- 文字大小 -->
        <attr name="bv_text_size" format="dimension|integer" />
        <!-- 文字颜色 -->
        <attr name="bv_text_color" format="color" />
        <!-- 文字中粗,默认是的 -->
        <attr name="bv_text_medium" format="boolean" />
        <!-- 背景色 -->
        <attr name="bv_background_color" format="color" />
        <!-- 数值 -->
        <attr name="bv_number" format="integer" />
        <!-- 显示风格,>99显示...,  或者显示+ ,默认显示... -->
        <attr name="bv_more_style" format="enum">
            <enum name="dot" value="1" />
            <enum name="plus" value="2" />
        </attr>
    </declare-styleable>

</resources>