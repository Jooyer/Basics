<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomSearchView">

        <!-- 显示返回按钮 -->
        <attr name="csv_show_left_arrow" format="boolean" />
        <!-- 左侧箭头的 颜色 -->
        <attr name="csv_left_arrow_color" format="color|reference" />
        <!-- 左侧箭头 Padding(上下左右) -->
        <attr name="csv_left_arrow_padding" format="dimension|integer" />
        <!-- 左侧箭头模式 -->
        <attr name="csv_left_arrow_style" format="enum">
            <!-- Google Material Design -->
            <enum name="material_design" value="1" />
            <!-- 微信风格 -->
            <enum name="wechat_design" value="2" />
        </attr>

        <!--  是否显示搜索图标,默认显示-->
        <attr name="csv_show_search_icon" format="boolean" />
        <!--  搜索图标颜色 -->
        <attr name="csv_search_icon_color" format="color|reference" />

        <!--是否显示清除图标,默认显示-->
        <attr name="csv_show_clear_icon" format="boolean" />
        <!--  清除图标颜色 -->
        <attr name="csv_clear_icon_color" format="color|reference" />


        <!-- 中间搜索容器高度,最小高度 30dp -->
        <attr name="csv_input_container_height" format="dimension|reference" />
        <!-- 中间搜索容器的左侧margin -->
        <attr name="csv_input_container_margin_left" format="dimension|reference" />
        <!-- 中间搜索容器的右侧margin -->
        <attr name="csv_input_container_margin_right" format="dimension|reference" />
        <!-- 中间搜索容器 drawable -->
        <attr name="csv_input_container_drawable" format="reference"/>


        <!--中间搜索输入框左侧padding-->
        <attr name="csv_input_left_padding" format="dimension|reference" />
        <!--默认的搜索文本-->
        <attr name="csv_default_search_text" format="string|reference" />
        <!--中间搜索输入框文本大小-->
        <attr name="csv_input_text_size" format="dimension|reference" />
        <!-- 中间搜索输入框文本颜色-->
        <attr name="csv_input_text_color" format="color|reference" />
        <!-- 中间搜索输入框提示文本-->
        <attr name="csv_input_hint_text" format="string|reference" />
        <!-- 中间搜索输入框提示文本颜色-->
        <attr name="csv_input_hint_color" format="color|reference" />
        <!-- 中间搜索输入框最大输入文本长度,默认不限制-->
        <attr name="csv_input_max_length" format="integer" />

        <!-- 点击整个搜索控件,此时如果需要跳转,则设置为true -->
        <attr name="csv_need_jump" format="boolean" />

        <!--是否显示搜索按钮,默认显示-->
        <attr name="csv_search_btn_visible" format="boolean" />
        <!--搜索按钮显示文本-->
        <attr name="csv_search_btn_text" format="string|reference" />
        <!--搜索按钮文本大小-->
        <attr name="csv_search_btn_text_size" format="dimension|reference" />
        <!--搜索按钮文本颜色-->
        <attr name="csv_search_btn_text_color" format="color|reference" />
        <!--搜索按钮背景颜色-->
        <attr name="csv_search_btn_bg_color" format="color|reference" />
        <!-- 搜索按钮宽度 -->
        <attr name="csv_search_btn_width" format="dimension|reference" />
        <!-- 搜索按钮高度 -->
        <attr name="csv_search_btn_height" format="dimension|reference" />
        <!-- 搜索按钮宽度右侧margin -->
        <attr name="csv_search_btn_margin_right" format="dimension|reference" />

        <!-- 底部分割线 ,默认隐藏-->
        <attr name="csv_bottom_divider_visible" format="boolean" />
        <!-- 底部分割线颜色 -->
        <attr name="csv_bottom_divider_color" format="color|reference"/>

    </declare-styleable>

</resources>