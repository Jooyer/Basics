<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowLayout">
        <!--  阴影颜色,默认颜色 #22000000,注意颜色值必须是8位,即有alpha  -->
        <attr name="sl_shadow_color" format="color" />
        <!--  背景颜色,默认Integer.MIN_VALUE  -->
        <attr name="sl_background_color" format="color" />
        <!--  阴影水平偏移,默认0  -->
        <attr name="sl_offset_x" format="dimension|float" />
        <!--  阴影垂直偏移,默认0  -->
        <attr name="sl_offset_y" format="dimension|float" />
        <!--  阴影圆角,默认0  -->
        <attr name="sl_shadow_radius" format="dimension|float" />
        <!--  ShadowLayout圆角,默认0  -->
        <attr name="sl_layout_radius" format="dimension|float" />
    </declare-styleable>
</resources>