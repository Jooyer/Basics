<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <LinearLayout
            android:id="@+id/ll_loading_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8"
            app:layout_constraintTop_toTopOf="parent"
    >

        <ProgressBar
                android:layout_width="@dimen/width_32"
                android:layout_height="@dimen/height_32"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_8"
                android:text="@string/common_library_loading"
                android:textSize="@dimen/text_size_14"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_loading_fail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_8"
                android:text="@string/common_library_loaded_fail"
                android:textSize="@dimen/text_size_14"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/ll_loading_end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_8"
                android:text="@string/common_library_no_more"
                android:textSize="@dimen/text_size_14"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>