<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FairySearchView">

        <!-- 显示返回按钮 -->
        <attr name="fsv_show_back_icon" format="boolean" />
        <!-- 左侧箭头的 颜色 -->
        <attr name="fsv_left_arrow_color" format="color|reference" />
        <!-- 左侧箭头 Padding(上下左右) -->
        <attr name="fsv_left_arrow_padding" format="dimension|integer" />
        <!-- 左侧箭头模式 -->
        <attr name="fsv_left_arrow_style" format="enum">
            <!-- Google Material Design -->
            <enum name="material_design" value="1" />
            <!-- 微信风格 -->
            <enum name="wechat_design" value="2" />
        </attr>
        <!--  是否显示搜索图标-->
        <attr name="fsv_show_search_icon" format="boolean" />
        <!--  搜索图标颜色 -->
        <attr name="fsv_search_icon_color" format="color|reference" />
        <!--是否显示清除图标-->
        <attr name="fsv_show_clear_icon" format="boolean" />
        <!--搜索按钮显示文本-->
        <attr name="fsv_search_btn_text" format="string|reference" />
        <!--搜索按钮文本大小-->
        <attr name="fsv_search_btn_text_size" format="dimension|reference" />
        <!--搜索按钮文本颜色-->
        <attr name="fsv_search_btn_text_color" format="color|reference" />
        <!--默认的搜索文本-->
        <attr name="fsv_default_search_text" format="string|reference" />
        <!-- 中间搜索输入框的高度 -->
        <attr name="fsv_input_container_height" format="dimension|reference" />
        <!--中间搜索输入框文本大小-->
        <attr name="fsv_input_et_text_size" format="dimension|reference" />
        <!--中间搜索输入框左侧padding-->
        <attr name="fsv_input_et_left_padding" format="dimension|reference" />
        <!-- 中间搜索输入框文本颜色-->
        <attr name="fsv_input_et_text_color" format="color|reference" />
        <!-- 中间搜索输入框提示文本-->
        <attr name="fsv_input_et_hint_text" format="string|reference" />
        <!-- 中间搜索输入框提示文本颜色-->
        <attr name="fsv_input_et_hint_color" format="color|reference" />
        <!-- 中间搜索输入框最大输入文本长度,默认不限制-->
        <attr name="fsv_input_et_max_length" format="integer" />
        <!-- 点击整个搜索控件,此时如果需要跳转,则设置rootClickable -->
        <attr name="fsv_root_clickable" format="boolean" />
        <!-- 底部分割线 -->
        <attr name="fsv_bottom_divider_visible" format="boolean" />

    </declare-styleable>

</resources>