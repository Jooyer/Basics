<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FlaskView">
        <!--The stroke color of flask-->
        <attr name="stroke_color" format="color"/>

        <!--The water color-->
        <attr name="water_color" format="color"/>

        <!--The bubble color-->
        <attr name="bubble_color" format="color"/>

        <!--The max radius of the bubbles-->
        <attr name="bubble_max_radius" format="integer"/>

        <!--The min radius of the bubbles-->
        <attr name="bubble_min_radius" format="integer"/>

        <!--The max speed of the bubbles-->
        <attr name="bubble_max_speed" format="float"/>

        <!--The min speed of the bubbles-->
        <attr name="bubble_min_speed" format="float"/>

        <!--Number of bubbles that can coexist at the same time-->
        <attr name="bubble_max_number" format="integer"/>

        <!--The creation of the bubble interval in millis-->
        <attr name="bubble_creation_interval" format="integer"/>

        <!--The stoke width of the flask-->
        <attr name="stroke_width" format="dimension"/>

        <!--The water level to the percentage of the height of the flask-->
        <attr name="water_height_percent" format="float"/>
    </declare-styleable>

</resources>